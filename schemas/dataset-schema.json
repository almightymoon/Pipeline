{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/dataset-schema.json",
  "title": "ML Dataset Schema",
  "description": "Schema for multi-language AI/ML training datasets in JSON format",
  "type": "object",
  "required": ["id", "text", "label", "metadata"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the data record",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "minLength": 1,
      "maxLength": 100
    },
    "text": {
      "type": "string",
      "description": "Main text content for training",
      "minLength": 1,
      "maxLength": 10000
    },
    "label": {
      "type": "string",
      "description": "Classification or target label",
      "enum": ["positive", "negative", "neutral", "spam", "ham", "toxic", "non-toxic"]
    },
    "language": {
      "type": "string",
      "description": "Language code (ISO 639-1)",
      "pattern": "^[a-z]{2}$",
      "default": "en"
    },
    "category": {
      "type": "string",
      "description": "Content category",
      "enum": ["news", "social", "technical", "business", "entertainment", "sports", "other"]
    },
    "confidence": {
      "type": "number",
      "description": "Confidence score for the label",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "score": {
      "type": "number",
      "description": "Numerical score or rating",
      "minimum": 0,
      "maximum": 10
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata about the record",
      "required": ["created_at", "source"],
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the record was created"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the record was last updated"
        },
        "source": {
          "type": "string",
          "description": "Source of the data",
          "enum": ["api", "scraping", "manual", "synthetic", "external"]
        },
        "author": {
          "type": "string",
          "description": "Author or creator of the content",
          "maxLength": 100
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Original URL if applicable"
        },
        "tags": {
          "type": "array",
          "description": "Additional tags for categorization",
          "items": {
            "type": "string",
            "maxLength": 50
          },
          "maxItems": 10
        },
        "processing_info": {
          "type": "object",
          "description": "Information about data processing",
          "properties": {
            "preprocessing_steps": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "augmentation_applied": {
              "type": "boolean",
              "default": false
            },
            "quality_score": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0
            }
          }
        }
      }
    },
    "features": {
      "type": "object",
      "description": "Extracted or engineered features",
      "properties": {
        "text_length": {
          "type": "integer",
          "minimum": 0
        },
        "word_count": {
          "type": "integer",
          "minimum": 0
        },
        "sentence_count": {
          "type": "integer",
          "minimum": 0
        },
        "avg_word_length": {
          "type": "number",
          "minimum": 0
        },
        "sentiment_score": {
          "type": "number",
          "minimum": -1.0,
          "maximum": 1.0
        },
        "readability_score": {
          "type": "number",
          "minimum": 0
        },
        "embedding": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "description": "Vector embedding of the text"
        }
      }
    },
    "annotations": {
      "type": "object",
      "description": "Manual or automated annotations",
      "properties": {
        "entities": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "text": {"type": "string"},
              "label": {"type": "string"},
              "start": {"type": "integer"},
              "end": {"type": "integer"},
              "confidence": {"type": "number", "minimum": 0.0, "maximum": 1.0}
            },
            "required": ["text", "label", "start", "end"]
          }
        },
        "keyphrases": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "topics": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "topic": {"type": "string"},
              "probability": {"type": "number", "minimum": 0.0, "maximum": 1.0}
            },
            "required": ["topic", "probability"]
          }
        }
      }
    }
  },
  "additionalProperties": false
}
